    <!--quality control-->
    <record id="no_create_quality_point_form" model="ir.ui.view">
        <field name="name">no.create.quality.point.form</field>
        <field name="model">quality.point</field>
        <field name="inherit_id" ref="quality.quality_point_view_form" />
        <field name="priority">250</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='product_category_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='picking_type_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
        </field>
    </record>

    <record id="no_create_quality_check_form" model="ir.ui.view">
        <field name="name">no.create.quality.check.form</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form" />
        <field name="priority">250</field>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='picking_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='production_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='point_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
        </field>
    </record>

    <record id="no_create_quality_alert_form" model="ir.ui.view">
        <field name="name">no.create.quality.alert.form</field>
        <field name="model">quality.alert</field>
        <field name="inherit_id" ref="quality_control.quality_alert_view_form" />
        <field name="priority">250</field>
        <field name="arch" type="xml">
           <xpath expr="//form/sheet/group/group[1]/field[@name='product_tmpl_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//form/sheet/group/group[1]/field[@name='picking_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//form/sheet/group/group[1]/field[@name='workcenter_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//form/sheet/group/group[2]/field[@name='team_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//form/sheet/group/group[2]/field[@name='user_id']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>
            <xpath expr="//form/sheet/group/group[2]/field[@name='tag_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>    
            </xpath>      
        </field>
    </record> 
    </data>
</odoo>
